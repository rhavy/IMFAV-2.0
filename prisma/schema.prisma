generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String     @id @default(cuid())
  name                      String
  email                     String     @unique
  emailVerified             Boolean    @default(false)
  image                     String?
  createdAt                 DateTime   @default(now())
  updatedAt                 DateTime   @updatedAt
  planId                    Int?       @default(1)
  cpf                       String?
  userRoles                 String?    @default("CLIENTE")
  sexo                      Genero?
  scheduledDeletion         DateTime?
  motivoSaida               String?
  uncao                     UncaoType?
  telefone                  String?
  nascimento                DateTime?
  blockedAt                 DateTime?
  blockedByUserId           String?
  blockedReason             String?
  status                    Status     @default(ATIVO)
  uncaoVerified             Boolean    @default(false)
  congregacao               String?
  accounts                  Account[]
  eventosCadastrados        Eventos[]  @relation("EventosCadastrados")
  igrejasCriadas            Igreja[]   @relation("IgrejasCriadas")
  sessions                  Session[]
  blockedBy                 User?      @relation("AdminActions", fields: [blockedByUserId], references: [id])
  actionsPerformed          User[]     @relation("AdminActions")
  cargo                     Cargo[]    @relation("UserToCargo")
  eventos_eventosdirigentes Eventos[]  @relation("eventosdirigentes")
  group                     Group[]    @relation("grouptouser")
  igreja_userigreja         Igreja[]   @relation("userigreja")

  @@index([blockedByUserId], map: "user_blockedByUserId_fkey")
  @@map("user")
}

model Eventos {
  id                     String          @id @default(cuid())
  name                   String
  descricao              String
  tema                   String
  origem                 String
  dataInicio             DateTime
  dataFim                DateTime
  dataCadastro           DateTime        @default(now())
  horaInicio             String
  horaFim                String
  libracao               String         @default("AGUARDANDO")
  idcadastrado           String
  categoriaId            String?
  convidados             Convidado[]
  cadastradoPor          User            @relation("EventosCadastrados", fields: [idcadastrado], references: [id])
  user_eventosdirigentes User[]          @relation("eventosdirigentes")
  categoria              CategoriaEvento? @relation(fields: [categoriaId], references: [id]) // Relação opcional com categoria

  @@index([idcadastrado], map: "eventos_idcadastrado_fkey")
  @@index([categoriaId], map: "eventos_categoriaId_fkey")
  @@map("eventos")
}

model Igreja {
  id              String   @id @default(cuid())
  name            String
  rua             String
  numero          String
  bairro          String
  cidade          String
  estado          String
  cep             String
  pais            String
  criadoPorId     String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  criadoPor       User     @relation("IgrejasCriadas", fields: [criadoPorId], references: [id])
  user_userigreja User[]   @relation("userigreja")

  @@index([criadoPorId], map: "igreja_criadoPorId_fkey")
  @@map("igreja")
}

model Convidado {
  id          String    @id @default(cuid())
  name        String
  uncao       UncaoType
  funcao      String
  aprovacao   Boolean   @default(false)
  imagem      String?
  eventoId    String
  evento      Eventos   @relation(fields: [eventoId], references: [id])

  @@index([eventoId], map: "convidado_eventoId_fkey")
  @@map("convidado")
}

model Cargo {
  id        String      @id @default(cuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User[]      @relation("UserToCargo")

  @@map("cargo")
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?  @default("blue-500")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User[]   @relation("grouptouser")

  @@map("group")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "session_userId_fkey")
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "account_userId_fkey")
  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String    @db.Text
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verification")
}

model Log {
  id              String   @id @default(cuid())
  action          String
  entityType      String   @default("User")
  entityId        String
  oldValue        String?  @db.LongText
  newValue        String?  @db.LongText
  performedBy     String
  performedAt     DateTime @default(now())
  motivo          String?
  observacao      String?  @db.Text
  tempoDisciplina String?

  @@map("log")
}

enum Status {
  ATIVO
  INATIVO
  BLOQUEADO
  DELETADO
}

enum Genero {
  MASCULINO
  FEMININO
}

model CategoriaEvento {
  id          String   @id @default(cuid())
  name        String   @unique // Nome da categoria (ex: Congresso, Culto, Conferência)
  descricao   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  eventos     Eventos[] // Relação com eventos
  
  @@map("categoria_evento")
}

enum UncaoType {
  PASTOR
  OBREIRO
  DIACONO
  EVANGELISTA
  PRESBITERO
  MISSIONARIO
}
